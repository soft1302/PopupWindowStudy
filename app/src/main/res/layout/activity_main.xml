<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="5sp">

        <RadioButton
            android:id="@+id/radio_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-2.5sp"
            android:background="@drawable/selector_bg_left"
            android:button="@null"
            android:text="确定" />

        <RadioButton
            android:id="@+id/radio_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-2.5sp"
            android:background="@drawable/selector_bg_right"
            android:button="@null"
            android:checked="false"
            android:text="取消" />
    </RadioGroup>
</LinearLayout>
